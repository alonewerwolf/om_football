<odoo>
    <data>
        <!-- explicit list view definition -->

        <record id="hr_timesheet_line_search_inherit" model="ir.ui.view">
            <field name="name">account.analytic.line.inherit</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id"
                   ref="hr_timesheet.hr_timesheet_line_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="footballer_name" string="Footballer Name"/>
                    <filter string="Footballer Record" name="footballer_record"
                            domain="[('is_footballer', '=', True)]"/>
                    <filter name="Footballer_groupby" string="Footballer"
                            domain="[]" context="{'group_by':'is_footballer'}"/>
                </xpath>
            </field>
        </record>


        <record id="account_analytic_line_inherit" model="ir.ui.view">
            <field name="name">account.analytic.line.inherit</field>
            <field name="model">account.analytic.line</field>
            <field name="type">form</field>
            <field name="inherit_id"
                   ref="hr_employee_time_clock.hr_timesheet_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <separator/>
                    <group>
                        <group>
                            <button name="openURL" string="Open URL" type="object"/>
                            <field name="tz"/>
                            <field name="image"/>
                            <field name="footballer_name"/>
                            <field name="footballer_age"/>
                            <field name="age_group"/>
                            <field name="footballer_number"/>
                            <field name="description"/>
<!--                            <field name="footballer_id"/>-->
                            <field name="active"/>
                            <field name="attendee_ids"/>
                        </group>
                        <group>
                            <field name="image"/>
                            <field name="football_club"/>
                            <field name="created_date"/>
                            <field name="description"/>
                            <field name="partner_id"/>
                            <field name="order_id"/>
<!--                            <field name="age_group"/>-->
<!--                            <field name="footballer_id"/>-->
<!--                            <field name="fc_id"/>-->
                        </group>
                    </group>
                </xpath>

            </field>
        </record>




        <record id="hr_timesheet.act_hr_timesheet_line_view_kanban" model="ir.actions.act_window.view">
            <field name="sequence">3</field>
        </record>

        <record id="action_set_footballer" model="ir.actions.server">
        	<field name="name">Set Footballer</field>
        	<field name="model_id" ref="analytic.model_account_analytic_line"/>
        	<field name="state">object_write</field>
    	</record>



    </data>
</odoo>